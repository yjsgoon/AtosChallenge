<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical" android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:padding="20dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/im_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="8pt"
        android:textStyle="bold"
        android:text="This is for your application lock.\nItâ€™s not account password.\nInitial password is 0000."
        android:id="@+id/txt_desc"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberPassword"
                android:enabled="false"
                android:focusable="false"
                android:padding="20dp"
                android:id="@+id/edt_PW_1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberPassword"
                android:enabled="false"
                android:focusable="false"
                android:padding="20dp"
                android:id="@+id/edt_PW_2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberPassword"
                android:enabled="false"
                android:focusable="false"
                android:padding="20dp"
                android:id="@+id/edt_PW_3"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberPassword"
                android:enabled="false"
                android:focusable="false"
                android:padding="20dp"
                android:id="@+id/edt_PW_4"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:stretchColumns="*">
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_1"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_2"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_3"
                android:onClick="mOnClick">
            </Button>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_4"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_5"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_6"
                android:onClick="mOnClick">
            </Button>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_7"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_8"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_9"
                android:onClick="mOnClick">
            </Button>
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_0"
                android:onClick="mOnClick">
            </Button>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="back"
                android:textSize="25dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_appPW_back"
                android:onClick="mOnClick">
            </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>